{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": ["main", "/^release-.*/"],
    "lockFileMaintenance": {
        "enabled": false,
        "commitMessageAction": "Update",
    },
    "packageRules": [
        {
            "groupName": "all dependencies",
            "groupSlug": "all",
            "matchPackagePatterns": [
                "*"
            ]
        },
    "separateMajorMinor": false,
    "constraints": {
        "go": "1.20"
    }
}
